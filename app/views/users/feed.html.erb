<h1>
  <%= @user.username %>
</h1>

<dl>
  <dt>
    Private
  </dt>
    <dd>
      <%= @user.private %>
    
  <dt>
    Followers
  </dt>
    <dd>
      <%= @followers.count %>
    </dd>
    <dd>
      <% if @current_user != nil %>
        <% current_user_follow_status = @user.requests_recieved.where({ :sender_id => @current_user.id }).first %>
        <% if current_user_follow_status != nil %>
          <% if current_user_follow_status.status == 'accepted' %>
            <a href="/delete_follow_request/<%= current_user_follow_status.id %>">
              Unfollow
            </a>
          <% end %>
        <% end %>
      <% end %>
    </dd>

  <dt>
    Following
  </dt>
    <dd>
    <%= @following.count %>
</dl>

<ul>
  <li>
    <a href="/users/<%= @user.username %>">
      Profile
    </a>
  </li>

  <li>
    <a href="/users/<%= @user.username %>/liked_photos">
      Liked photos
    </a>
  </li>

  <li>
    <a href="/users/<%= @user.username %>/feed">
      Feed
    </a>
  </li>

  <li>
    <a href="/users/<%= @user.username %>/discover">
      Discover
    </a>
  </li>
</ul>

<% posts_count = 0 %>
<% @following.each do |a_followed_user| %>
  <% posts_count += a_followed_user.follow_requestors.posts.count %>
<% end %>

<h2>
  Feed (<%= posts_count %>)
</h2>

<table border=1>
  <tr>
    <th>
      Image
    </th>

    <th>
      Owner
    </th>

    <th>
      Caption
    </th>

    <th>
      Posted
    </th>

    <th>
      Likes
    </th>

    <th>
    </th>
  </tr>

  <% @following.each do |a_followed_user| %>
    <% a_followed_user.follow_requestors.posts.each do |a_post| %>
      <tr>
        <td>
          <img src="<%= a_post.image %>">
        </td>

        <td>
          <%= a_post.poster.username %>
        </td>

        <td>
          <%= a_post.caption %>
        </td>

        <td>
          <%= a_post.created_at %>
        </td>

        <td>
          <%= a_post.likes_count %>
        </td>

        <td>
          <a href="photos/<%= a_post.id %>">
            Show details
          </a>
        </td>
      </tr>
    <% end %>
  <% end %>
</table>
