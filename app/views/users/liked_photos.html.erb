<h1>
  <%= @user.username %>
</h1>

<dl>
  <dt>
    Private
  </dt>
    <dd>
      <%= @user.private %>
    
  <dt>
    Followers
  </dt>
    <dd>
      <%= @followers.count %>
    </dd>
    <dd>
      <% if @current_user != nil %>
        <% current_user_follow_status = @user.requests_recieved.where({ :sender_id => @current_user.id }).first %>
        <% if current_user_follow_status != nil %>
          <% if current_user_follow_status.status == 'accepted' %>
            <a href="/delete_follow_request/<%= current_user_follow_status.id %>">
              Unfollow
            </a>
          <% end %>
        <% end %>
      <% end %>
    </dd>

  <dt>
    Following
  </dt>
    <dd>
    <%= @following.count %>
</dl>

<ul>
  <li>
    <a href="/users/<%= @user.username %>">
      Profile
    </a>
  </li>

  <li>
    <a href="/users/<%= @user.username %>/liked_photos">
      Liked photos
    </a>
  </li>

  <li>
    <a href="/users/<%= @user.username %>/feed">
      Feed
    </a>
  </li>

  <li>
    <a href="/users/<%= @user.username %>/discover">
      Discover
    </a>
  </li>
</ul>

<h2>
  Liked photos (<%= @user.likes.count %>)
</h2>

<table border=1>
  <tr>
    <th>
      Image
    </th>

    <th>
      Owner
    </th>

    <th>
      Caption
    </th>

    <th>
      Posted
    </th>

    <th>
      Likes
    </th>

    <th>
    </th>
  </tr>

  <% @user.likes.each do |a_like| %>
  <tr>
    <td>
      <img src="<%= a_like.photo.image %>">
    </td>

    <td>
      <%= a_like.photo.poster.username %>
    </td>

    <td>
      <%= a_like.photo.caption %>
    </td>

    <td>
      <%= a_like.photo.created_at %>
    </td>

    <td>
      <%= a_like.photo.likes_count %>
    </td>

    <td>
      <a href="photos/<%= a_like.photo.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
