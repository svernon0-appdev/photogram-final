<h1>
  <%= @user.username %>
</h1>

<dl>
  <dt>
    Private
  </dt>
    <dd>
      <%= @user.private %>
    
  <dt>
    Followers
  </dt>
    <dd>
      <%= @followers.count %>
    </dd>
    <dd>
      <% if @current_user != nil %>
        <% current_user_follow_status = @user.requests_recieved.where({ :sender_id => @current_user.id }).first %>
        <% if current_user_follow_status != nil %>
          <% if current_user_follow_status.status == 'accepted' %>
            <a href="/delete_follow_request/<%= current_user_follow_status.id %>">
              Unfollow
            </a>
          <% end %>
        <% end %>
      <% end %>
    </dd>

  <dt>
    Following
  </dt>
    <dd>
    <%= @following.count %>
</dl>


<ul>
  <li>
    <a href="/users/<%= @user.username %>">
      Profile
    </a>
  </li>

  <li>
    <a href="/users/<%= @user.username %>/liked_photos">
      Liked photos
    </a>
  </li>

  <li>
    <a href="/users/<%= @user.username %>/feed">
      Feed
    </a>
  </li>

  <li>
    <a href="/users/<%= @user.username %>/discover">
      Discover
    </a>
  </li>
</ul>


<h2>
  Own photos (<%= @user.posts.count %>)
</h2>

<table border=1>
  <tr>
    <th>
      Image
    </th>

    <th>
      Owner
    </th>

    <th>
      Caption
    </th>

    <th>
      Posted
    </th>

    <th>
      Likes
    </th>

    <th>
    </th>
  </tr>

  <% @user.posts.order({ :likes_count => :desc }).each do |a_post| %>
    <tr>
      <td>
        <img src="<%= a_post.image %>">
      </td>

      <td>
        <%= a_post.poster.username %>
      </td>

      <td>
        <%= a_post.caption %>
      </td>

      <td>
        <%= time_ago_in_words(a_post.created_at) %> ago
      </td>

      <td>
        <%= a_post.likes_count %>
      </td>

      <td>
        <a href="/photos/<%= a_post.id %>">
          Show details
        </a>
      </td>
    </tr>
  <% end %>
</table>
